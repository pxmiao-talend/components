{
 "$schema": "http://json-schema.org/schema#",
 "id": "http://talend.com/schemas/datastreams/cassandra_datastore.json",
 "type": "object",
 "properties": {
   "host": {"type":"string"},
   "port": {"type":"integer"},
   "version": {"type":"string", "enum": ["2_2", "3_0"]},
   "use_authentication": {"type":"boolean"},
   "authentication": {
     "type": "object",
     "properties": {
       "username": {"type":"string"},
       "password": {"type":"string"}
     }
   },
   "use_ssl": {"type":"boolean"},
   "ssl": {
     "type": "object",
     "properties": {
       "type": {"type":"string", "enum": ["JKS", "PKCS12"]},
       "file": {"type":"string"},
       "password": {"type":"string"},
       "use_client_auth": {"type":"boolean"},
       "client_auth": {
         "type": "object",
         "properties": {
           "type": {"type":"string", "enum": ["JKS", "PKCS12"]},
           "file": {"type":"string"},
           "password": {"type":"string"}
         }
       }
     }
   }
 }
}